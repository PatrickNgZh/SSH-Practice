<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.custom.i18n.resources" value="globalMessages"/>
    <constant name="struts.objectFactory" value="spring" />
    
    <package name="user" extends="struts-default" namespace="/login">

        <interceptors>
            <interceptor name="logininterceptor" class="com.patrick.strutsnoticeboard.intercepter.LoginIntecepter"/>
        </interceptors>

        <global-results>
            <result name="error">/WEB-INF/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"></exception-mapping>
        </global-exception-mappings>

        <action name="login" class="com.patrick.strutsnoticeboard.controller.LoginController">
            <result name="success">/WEB-INF/back/backIndex.jsp</result>
            <result name="input">/WEB-INF/login/login.jsp</result>
            <interceptor-ref name="logininterceptor"/>
        </action>

        <action name="vertify" class="com.patrick.strutsnoticeboard.controller.LoginVertifyController">
            <result name="success">/WEB-INF/back/backIndex.jsp</result>
            <result name="input">/WEB-INF/login/login.jsp</result>
        </action>

    </package>

    <package name="home" extends="struts-default">
        <default-action-ref name="index"/>

        <global-results>
            <result name="error">/WEB-INF/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"></exception-mapping>
        </global-exception-mappings>


        <action name="index" class="indexController">
            <result name="success">/WEB-INF/page/index.jsp</result>
        </action>
    </package>

    <package name="NoticeInfo" extends="struts-default" namespace="/notice">

        <global-results>
            <result name="error">/WEB-INF/error.jsp</result>
        </global-results>

        <!--<global-exception-mappings>-->
            <!--<exception-mapping exception="java.lang.Exception" result="error"></exception-mapping>-->
        <!--</global-exception-mappings>-->

        <action name="init" class="com.patrick.strutsnoticeboard.controller.NoticeInitController" method="init">
            <result name="init">/WEB-INF/notice/nullList.html</result>
        </action>
        <action name="getInfo" class="noticeInfoController">
            <result name="typeInfo">/WEB-INF/notice/showNoticeByType.jsp</result>
        </action>
        <action name="showDetail" class="com.patrick.strutsnoticeboard.controller.NoticeDetailController">
            <result name="showDetail">/WEB-INF/notice/showNoticeDetailByID.jsp</result>
        </action>
    </package>

    <package name="logout" extends="struts-default" namespace="/logout">

        <global-results>
            <result name="error">/WEB-INF/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"></exception-mapping>
        </global-exception-mappings>

        <action name="logout" class="com.patrick.strutsnoticeboard.controller.LogoutController">
            <result name="success">/WEB-INF/page/index.jsp</result>
        </action>
    </package>

    <package name="back" extends="struts-default" namespace="/back">

        <global-results>
            <result name="error">/WEB-INF/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"></exception-mapping>
        </global-exception-mappings>

        <action name="showAllNotices" class="com.patrick.strutsnoticeboard.controller.BackGetNoticePageController">
            <result name="success">/WEB-INF/back/showAllNoticeList.jsp</result>
        </action>
        <action name="addNoticesList" class="com.patrick.strutsnoticeboard.controller.BackAddNoticeListController">
            <result name="success">/WEB-INF/back/noticeAdd.jsp</result>
        </action>
        <action name="addNotice" class="com.patrick.strutsnoticeboard.controller.BackAddNoticeController">
            <result name="success" type="redirectAction">showAllNotices?pageIndex=1</result>
        </action>
        <action name="deleteNotice" class="com.patrick.strutsnoticeboard.controller.BackDeleteNoticeController">
            <result name="success" type="redirectAction">
                <param name="actionName">showAllNotices</param>
                <param name="pageIndex">${pageIndex}</param>
            </result>
        </action>
        <action name="alertNoticeReturn" class="com.patrick.strutsnoticeboard.controller.BackAlertNoticeReturnController">
            <result name="success" type="redirectAction">
                <param name="actionName">showAllNotices</param>
                <param name="pageIndex">${pageIndex}</param>
            </result>
        </action>
        <action name="alertNotice" class="com.patrick.strutsnoticeboard.controller.BackAlertNoticeController">
            <result name="success">/WEB-INF/back/noticeEdit.jsp</result>
        </action>
    </package>

</struts>
