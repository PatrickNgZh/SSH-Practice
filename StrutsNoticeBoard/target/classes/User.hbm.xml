<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.patrick.strutsnoticeboard.bean">
    <class name="User" table="Nuser" lazy="true">
        <id name="id">
            <column name="Uno"/>
        </id>
        <property name="name" column="Uname" type="string" length="20"/>
        <property name="password" column="Upassword" type="string"/>
    </class>
</hibernate-mapping>